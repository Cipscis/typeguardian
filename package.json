{
	"name": "base-project",
	"version": "0.1.0",
	"description": "This is my base project to use when creating new projects.",
	"private": true,
	"type": "module",
	"scripts": {
		"server": "node server/server.js",
		"build": "gulp build",
		"watch": "gulp",
		"lintJs": "eslint app/assets/js/src/**",
		"lintCss": "stylelint app/assets/scss/**/*.scss",
		"lint": "npm run lintJs && npm run lintCss",
		"start": "concurrently --kill-others \"npm run server\" \"npm run watch\"",
		"test": "npm run lint && tsc",
		"prepare": "gulp clean && npm test"
	},
	"author": "Mark Hanna",
	"repository": {
		"type": "git",
		"url": "https://github.com/cipscis/base-project.git"
	},
	"license": "Hippocratic-2.1",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.57.0",
		"@typescript-eslint/parser": "^5.57.0",
		"concurrently": "^8.0.1",
		"dotenv": "^16.0.3",
		"eslint": "^8.37.0",
		"express": "^4.18.2",
		"gulp": "^4.0.2",
		"gulp-sass": "^5.1.0",
		"sass": "^1.60.0",
		"stylelint": "^15.3.0",
		"stylelint-config-recommended-scss": "^9.0.1",
		"ts-loader": "^9.4.2",
		"typescript": "^5.0.3",
		"webpack": "^5.77.0"
	},
	"engines": {
		"node": ">=16"
	}
}
